
<div class="chatpanel">

  <% @users.each_with_index do |user, index| %>

  <!-- <td><%= index +=1 %></td> -->
  <div class="row chat_user_details">
    <div class="col s2" style="padding: 0;">
      <% if user.picture? %>
      <%= link_to do %>
      <%= image_tag @user.picture.url ,:class => 'chat_user_image'%>
      <% end %>
      <% else %>
      <%= image_tag 'default-image.png',:class => 'chat_user_image' %>
      <% end %>
    </div>
    <div class="col s8">
      <%= link_to truncate(user.first_name,:length=>14,:separator => ' ') , "#", class: "start-conversation",
      "data-sid" => current_user.id, "data-rip" => user.id %>
    </div>
    <div class="col s2">
      <%= image_tag 'header/online.png' %>
    </div>
  </div>
  <% end %>
</div>

