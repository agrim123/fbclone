<div class="row">
 <div class="col s2">
  <%= render 'layouts/side_nav' %>
</div>
<div class="col s8">
 <% @users.each do |user| %>
 <div class="row">
  <div class="col s12 m12">
    <div class="card hoverable">
      <div class="card-content">
        <div class="row">
          <div class="col s2 waves-effect waves-block waves-light">
            <% if user.picture? %>
            <%= image_tag user.picture.url ,:style =>'width:100%'%>
            <% else %>
            <%= image_tag 'default-image.png' %>
            <% end %>
          </div>
          <div class="col s8">
            <div class="row">
              <%= link_to user.first_name+" "+user.last_name,user %>
            </div>
          </div>
          <% if current_user.admin? %>
          <div class="col s2">
            <%= link_to "<i class='small material-icons'>delete</i>".html_safe, user, method: :delete,
            data: { confirm: "You sure?" } %>
          </div>
          <%end %>
<!--<div class="col s2">
             <% if current_user.following?(user) %>
             yes
             <% else %>
             no
             <% end %>
           </div> -->
         </div>
       </div>
     </div>
   </div>
 </div>
 <% end %>
</div>
<div id="chatbox" class="col s2">
  <%= render 'users/chat' %>
</div>
</div>
