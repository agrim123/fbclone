<% if micropost.visible == "Public" || micropost.user.id == current_user.id%>
<div class="row">
	<div class="col s12">
		<div class="card hoverable">
			<div class="row">
				<div class="col s2">
					<% if micropost.user.picture? %>
					<%= image_tag micropost.user.picture.url ,:style =>'width:100%'%>
					<% else %>
					<%= image_tag 'default-image.png' %>
					<% end %>
				</div>
				<div class="col s8">
					<div class="row">
						<div class="s12">
							<%= link_to micropost.user.first_name, micropost.user %> 
							<% if micropost.tags.present? %>
							was with
							<%= micropost.tags.split('x').to_sentence.html_safe %>
							<% end %> 
							
							<% if micropost.location.present? %>
							&nbsp;at <%= micropost.location.capitalize %>
							<% end %>
						</div>
					</div>
					<div class="row">
						<div class="s12">
							<%= time_ago_in_words(micropost.created_at) %> ago.
							<% if micropost.visible == 'Public' %>
							<i class="fa fa-globe" aria-hidden="true"></i>
							<% elsif micropost.visible == 'Only Me' %>
							<i class="fa fa-lock" aria-hidden="true"></i>
							<% elsif micropost.visible == 'Friends' %>
							<i class="fa fa-users" aria-hidden="true"></i>
							<% end %>
						</div>
					</div>
				</div>
				<div class="col s2">
					<% if current_user?(micropost.user) %>
					<%= link_to "<i class='tiny material-icons'>mode_edit</i>".html_safe, edit_micropost_path(micropost) %>
					<%= link_to "<i class='tiny material-icons'>delete</i>".html_safe, micropost, method: :delete,
					data: { confirm: "You sure?" } %>
					<% end %>
				</div>
			</div>
			<div class="card-content">
				<%= micropost.content.gsub(/\n/, '<br />').html_safe %>
			</div>
			<div class="card-image" style="padding-left: 10px;padding-right: 10px;">
				<%= image_tag micropost.picture.url if micropost.picture? %>
			</div>
			<% if micropost.get_likes.size >0 %>
			<div class="card-action">
				<%= display_likes micropost %>
			</div>
			<% end %>
			<div class="card-action">
				<% if logged_in? %>
				<% if current_user.liked? micropost %>
				<%= link_to "<i class='material-icons sentiment_very_satisfied'>sentiment_very_satisfied</i>".html_safe, dislike_micropost_path(micropost), class: 'vote', method: :put, remote: true, data: { toggle_text: "<i class='material-icons sentiment_neutral'>sentiment_neutral</i>".html_safe, toggle_href: like_micropost_path(micropost), id: micropost.id },:style=>'margin-right:0' %>
				<% else %>
				<%= link_to "<i class='material-icons sentiment_neutral'>sentiment_neutral</i>".html_safe, like_micropost_path(micropost), class: 'vote', method: :put, remote: true, data: { toggle_text: "<i class='material-icons sentiment_very_satisfied'>sentiment_very_satisfied</i>".html_safe, toggle_href: dislike_micropost_path(micropost), id: micropost.id } ,:style=>'margin-right:0'%>
				<% end %>
				<span> Â· </span>
				<% end %>

				<span class="votes-count" data-id="<%= micropost.id %>">
					<%= micropost.get_likes.size %>
				</span>likes
			</div>
			<div class="comments" id="comments_<%= micropost.id %>">
				<% if micropost.comments %>
				<%= render micropost.comments, micropost: micropost %>
				<% end %>
			</div>
			<div class="card-action">
				<div class="comment-form row">
					<%= form_for [micropost, micropost.comments.build] , remote:true do |f| %>
					<div class="col s2">
						<% if current_user.picture? %>
						<%= image_tag current_user.picture.url ,:style =>'width:80%'%>
						<% else %>
						<%= image_tag 'default-image.png' %>
						<% end %>
					</div>
					<div class="col s9">
						<%= f.text_field :content, placeholder: 'Add a comment...', class: "comment_content", id: "comment_content_#{micropost.id}" %>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<% end %>
