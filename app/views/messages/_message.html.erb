<li class="<%= self_or_other(message) %>">
  <div class="avatar">
    <% if message.user.picture? %>
    <%= image_tag message.user.picture.url ,:style =>'width:100%'%>
    <% else %>
    <%= image_tag 'default-image.png' %>
    <% end %>
  </div>
  <div class="chatboxmessagecontent">
    <p><%= message.body %></p>
    <time datetime="<%= message.created_at %>" title="<%= message.created_at.strftime("%d %b %Y at %I:%M%p") %>">
      <%= message_interlocutor(message).first_name %> â€¢ <%= message.created_at.strftime("%H:%M %p") %>
    </time>
  </div>
</li>
